{% extends 'base.html.twig' %}

{% block title %}Liste des agents{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Liste des agents</h1>
            </div>
        </div>
    </div>
<div class="m-5">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Idendifiant</th>
            <th>LNom</th>
            <th>Prénom</th>
            <th>Dat de naissance</th>
            <th>Code</th>
            <th>Nationalité</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.id }}</td>
                <td>{{ agent.lastName }}</td>
                <td>{{ agent.firstName }}</td>
                <td>{{ agent.dateOfBirth ? agent.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ agent.code }}</td>
                <td>{{ agent.nationality }}</td>
                <td>
                    <a href="{{ path('agent_show', {'id': agent.id}) }}">Détails</a>
                    <a href="{{ path('agent_edit', {'id': agent.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun agent enregistrés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>


    <a href="{{ path('agent_new') }}" role="button" class="btn btn-primary m-5">Créer un nouvel agent</a>
{% endblock %}
