{% extends 'base.html.twig' %}

{% block title %}Liste des cibles{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Liste des cibles</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Code</th>
                <th>Nationalité</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for target in targets %}
                <tr>
                    <td>{{ target.id }}</td>
                    <td>{{ target.lastName }}</td>
                    <td>{{ target.firstName }}</td>
                    <td>{{ target.dateOfBirth ? target.dateOfBirth|date('d-m-Y') : '' }}</td>
                    <td>{{ target.code }}</td>
                    <td>{{ target.nationality }}</td>
                    <td>
                        <a href="{{ path('target_show', {'id': target.id}) }}">Détails</a>
                        <a href="{{ path('target_edit', {'id': target.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune cible enregistrées</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="m-5">
        <a href="{{ path('target_new') }}" role="button" class="btn btn-primary m-5">Créer une cible</a>
    </div>
    {{ include('_footer.html.twig') }}
{% endblock %}
