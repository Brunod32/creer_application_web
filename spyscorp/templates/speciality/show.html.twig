{% extends 'base.html.twig' %}

{% block title %}Spécialité{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Détails de la spécialité {{ speciality.id }}</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <table class="table">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ speciality.name }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="ms-5">
        <a href="{{ path('speciality_index') }}" class="btn btn-success">Retour à la liste</a>
    </div>

    <div class="ms-5 m-2">
        <a href="{{ path('speciality_edit', {'id': speciality.id}) }}" class="btn btn-primary">Modifier</a>

        {{ include('speciality/_delete_form.html.twig') }}
    </div>
    {{ include('_footer.html.twig') }}
{% endblock %}
