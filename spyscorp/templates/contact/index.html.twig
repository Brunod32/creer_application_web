{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Liste des contacts</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Nom de code</th>
                <th>Nationalité</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.lastName }}</td>
                    <td>{{ contact.firstName }}</td>
                    <td>{{ contact.dateOfBirth ? contact.dateOfBirth|date('d-m-Y') : '' }}</td>
                    <td>{{ contact.code }}</td>
                    <td>{{ contact.nationality }}</td>
                    <td>
                        <a href="{{ path('contact_show', {'id': contact.id}) }}">Détails</a>
                        <a href="{{ path('contact_edit', {'id': contact.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun contact enregistrés</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="ms-5">
        <a href="{{ path('contact_new') }}" role="button" class="btn btn-primary m-5">Créer un nouveau contact</a>
    </div>
    {{ include('_footer.html.twig') }}
{% endblock %}
