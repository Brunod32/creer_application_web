{% extends 'base.html.twig' %}

{% block title %}Les agents{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Détails des agents</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <table class="table">
            <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ agent.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ agent.firstName }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ agent.dateOfBirth ? agent.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ agent.code }}</td>
            </tr>
            <tr>
                <th>Nationalité</th>
                <td>{{ agent.nationality }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="ms-5">
        <a href="{{ path('agent_index') }}">Retour à la liste</a>

        <a href="{{ path('agent_edit', {'id': agent.id}) }}">Modifier</a>

        {{ include('agent/_delete_form.html.twig') }}
    </div>

{% endblock %}
