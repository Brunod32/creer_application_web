{% extends 'base.html.twig' %}

{% block css %}
    {# Feuille de style personnalisée page accueil #}
    <link rel="stylesheet" href="{{ asset('/css/style-accueil.css') }}">
{% endblock %}

{% block title %}Accueil Spy's Corp{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row align-items-center vh-100">
        <div class="d-flex justify-content-center">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">Spy's Corp</h1>
                    <hr>
                    <h6 class="card-subtitle text-center mb-2 text-muted"><cite>Wherever you are, we will find you</cite></h6>
                    <hr>
                    <img src="{{ asset('img/confidentiel.jpg') }}" class="card-img-top" alt="Confidentiel">
                    <p class="text-center">
                        <a href="{{ path('mission_index') }}">
                            <i class="fa-solid fa-folder-open fa-2x" title="Consulter les missions"></i>
                        </a>
                    </p>
                    <p class="text-center">
                        <a href="{{ path('app_login') }}">
                            <i class="fa-solid fa-user-secret fa-2x" title="Connexion"></i>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

