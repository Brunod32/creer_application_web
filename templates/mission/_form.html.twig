{{ form_start(form) }}
<div>
    <div class="row justify-content-between">
        <div class="col-12 col-lg-5 ml-auto">
            {{ form_row(form.title, {'label': 'Titre'}) }}
            {{ form_row(form.description, {'label': 'Description'}) }}
            {{ form_row(form.code, {'label': 'Code'}) }}
        </div>
        <div class="col-12 col-lg-5 mr-auto">
            {{ form_row(form.country, {'label': 'Pays'}) }}
            {{ form_row(form.type, {'label': 'Type'}) }}
            {{ form_row(form.status, {'label': 'Statut'}) }}
        </div>
    </div>
</div>


<div class="row justify-content-between">
    <div class="col-12 col-lg-5 ml-auto">
        {{ form_row(form.dateStart, {'label': 'Date de Début'}) }}
    </div>
    <div class="col-12 col-lg-5 mr-auto">
        {{ form_row(form.dateEnd, {'label': 'Date de fin'}) }}
    </div>
</div>

<div class="row justify-content-between">
    <div class="col-12 col-lg-5 ml-auto">
        {{ form_row(form.agent, {'label': 'Agent'}) }}
        {{ form_row(form.speciality, {'label': 'Spécialité'}) }}
    </div>
    <div class="col-12 col-lg-5 mr-auto">
        {{ form_row(form.target, {'label': 'Cible'}) }}
        {{ form_row(form.hideout, {'label': 'Planque'}) }}
        {{ form_row(form.contact, {'label': 'Contact'}) }}
    </div>
</div>

    <button class="btn btn-primary ml-5 mt-2">{{ button_label|default('Enregistrer') }}</button>
