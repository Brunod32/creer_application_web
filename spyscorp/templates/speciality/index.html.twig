{% extends 'base.html.twig' %}

{% block title %}Liste des spécialités{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Liste des spécialités</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <div class="d-flex justify-content-end">
            {% if currentPage > 1 %}
                <a href="{{ path('speciality_paginer', {'page': currentPage - 1}) }}" class="btn mt-5">
                    <i class="fa-solid fa-chevron-left" title="Page précédente"></i>
                </a>
            {% endif %}
            {% if maxSpeciality %}
                <a href="{{ path('speciality_paginer', {'page': currentPage + 1}) }}" class="btn mt-5">
                    <i class="fa-solid fa-chevron-right" title="Page suivante"></i>
                </a>
            {% endif %}
        </div>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for speciality in specialities %}
                <tr>
                    <td>{{ speciality.id }}</td>
                    <td>{{ speciality.name }}</td>
                    <td>
                        <a href="{{ path('speciality_show', {'id': speciality.id}) }}"><i class="fa-solid fa-folder-open" title="Détails"></i></a>
                        <a href="{{ path('speciality_edit', {'id': speciality.id}) }}"><i class="fa-solid fa-pen-clip" title="Modifier"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune spécialité enregistrées</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="m-5">
        <a href="{{ path('speciality_new') }}" role="button" class="btn btn-primary m-5">Créer une spécialité</a>
    </div>
    {{ include('_footer.html.twig') }}
{% endblock %}
