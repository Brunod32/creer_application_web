{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Détails des missions</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <table class="table">
            <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ mission.code }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ mission.country }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ mission.type }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ mission.status }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ mission.dateStart ? mission.dateStart|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ mission.dateEnd ? mission.dateEnd|date('d-m-Y') : '' }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="ms-5">
        <a href="{{ path('mission_index') }}" class="btn btn-success">Retour à la liste</a>
    </div>
    <div class="ms-5 m-2">
        <a href="{{ path('mission_edit', {'id': mission.id}) }}" class="btn btn-primary">Détails</a>

        {{ include('mission/_delete_form.html.twig') }}
    </div>
    {{ include('_footer.html.twig') }}
{% endblock %}
