{% extends 'base.html.twig' %}

{% block title %}Cible{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Détails de la cible {{ target.id }}</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <table class="table">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ target.lastName }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ target.firstName }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ target.dateOfBirth ? target.dateOfBirth|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ target.code }}</td>
            </tr>
            <tr>
                <th>Nationalité</th>
                <td>{{ target.nationality }}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="ms-5">
        <a href="{{ path('target_index') }}" class="btn btn-success">Retour à la liste</a>
    </div>

    <div class="ms-5 m-2">
        <a href="{{ path('target_edit', {'id': target.id}) }}" class="btn btn-primary">Modifier</a>

        {{ include('target/_delete_form.html.twig') }}
    </div>
    {{ include('_footer.html.twig') }}
{% endblock %}
